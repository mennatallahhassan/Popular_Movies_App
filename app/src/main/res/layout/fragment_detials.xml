<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="#55c6b2"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:text="Menna"
            android:textColor="#fff"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/imageView_poster"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_title"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textview_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_title"
            android:layout_marginLeft="200dp"
            android:paddingBottom="3dp"
            android:text="Menna"
            android:textColor="#515655"
            android:textSize="23dp" />


        <TextView
            android:id="@+id/textview_rate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_year"
            android:layout_marginLeft="200dp"
            android:paddingBottom="3dp"
            android:text="Menna"
            android:textColor="#000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/fav_button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_rate"
            android:layout_marginLeft="200dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_poster"
            android:paddingLeft="20dp"
            android:text="Menna"
            android:textColor="#000"
            android:textSize="15dp" />


        <ListView
            android:id="@+id/trailer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_description"></ListView>

        <ListView
            android:id="@+id/review_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailer_list"></ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/trailer_list"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#000" />
    </RelativeLayout>
</ScrollView>